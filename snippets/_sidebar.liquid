<h3 class="my-2 text-slate-500">{{ 'generic.search' | t }}</h3>
{% form_tag 'search' %}
  <div class="flex items-center text-sm relative">
    <input class="py-3 px-4 pe-13 block w-full border-gray-200 shadow-sm rounded-lg text-sm" name="{{form.keywords_field_name}}" value="{{ search.keywords | escape }}" placeholder="{{ "placeholders.search" | t }}"></input>
    <button type="submit" class="absolute inset-y-0 end-0 flex items-center z-20 pe-4">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="stroke-gray-700"><path d="M18.031 16.6168L22.3137 20.8995L20.8995 22.3137L16.6168 18.031C15.0769 19.263 13.124 20 11 20C6.032 20 2 15.968 2 11C2 6.032 6.032 2 11 2C15.968 2 20 6.032 20 11C20 13.124 19.263 15.0769 18.031 16.6168ZM16.0247 15.8748C17.2475 14.6146 18 12.8956 18 11C18 7.1325 14.8675 4 11 4C7.1325 4 4 7.1325 4 11C4 14.8675 7.1325 18 11 18C12.8956 18 14.6146 17.2475 15.8748 16.0247L16.0247 15.8748Z"></path></svg>
    </button>
  </div>
  <div class="relative flex items-center mb-4">
    <input type="text" name="{{form.keywords_field_name}}" value="{{ search.keywords | escape }}" class="block w-full outline-none border-2 bg-white dark:bg-primary-100 rounded border-primary focus:border-primary-focus pl-2 pr-8 text-[#424242] py-2 placeholder:text-slate-400 text-sm" placeholder="{{ "placeholders.search" | t }}">
    <div class="absolute inset-y-0 right-0 flex py-2 pr-2">
      <kbd class="inline-flex items-center px-1 font-sans text-xs text-slate-400">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
        </svg>
      </kbd>
    </div>
  </div>
{% endform_tag %}
<hr/>
<ul role="list" class="flex flex-col space-y-1">
  {% for tag in site.tags %}
    <li>
      <a href="{{ tag.path }}" class="flex items-center px-2 py-2 space-x-2 transition-all duration-300 ease-in-out hover:bg-slate-500/20 rounded-lg">
        <span class="w-2 h-2 rounded-full shrink-0" style="
          background-color: hsl({{ tag.color_hls[0] }}, {{ tag.color_hls[1] }}%, 90%);
          color: {{ tag.color }};"></span>
        <span class="flex-grow w-0 break-words" style="color: {{ tag.color }};">
          {{ tag.name }}
        </span>
      </a>
    </li>
  {% endfor %}
</ul>