{% comment %} 页面列表展示效果 {% endcomment %}
<article class="flex justify-between border-b border-slate-100 py-4 px-2 rounded-lg hover:bg-primary/5 transition-colors duration-200 ease-in-out">
  <div>
    <a href="{{ page.path }}" class="flex items-start">
      <div class="mt-2 mr-3">
        <svg class="w-4 h-4 fill-current shrink-0" viewBox="0 0 16 16">
          <path class="text-primary-darken" d="M4 8H0v4.9c0 1 .7 1.9 1.7 2.1 1.2.2 2.3-.8 2.3-2V8z" />
          <path class="text-primary" d="M15 1H7c-.6 0-1 .4-1 1v11c0 .7-.2 1.4-.6 2H13c1.7 0 3-1.3 3-3V2c0-.6-.4-1-1-1z" />
        </svg>
      </div>
      <h2 class="text-lg font-bold leading-snug md:text-xl text-slate-800 hover:underline hover:text-indigo-600">{{
        page.link_text }}</h2>
    </a>
    <div class="pl-7 pt-1 pb-4 space-y-4">
      <div class="flex gap-2">
        {% for tag in page.settings.tags %}
          {% render "tag", tag: tag %}
        {% endfor %}
      </div>
      {% if page.settings.description %}
        <div class="text-slate-500">{{ page.settings.description }}</div>
      {% endif %}
      <!-- sub page list -->
      {% render "sub_page_list", page: page, per: 5 %}
    </div>
  </div>
  {% assign page_thumb_image_url = page.settings.thumb_image_url | presence %}
  {% if page_thumb_image_url %}
    <div class="">
      <img class="max-h-24 rounded-lg" src="{{ page_thumb_image_url }}" />
    </div>
  {% endif %}
</article>
