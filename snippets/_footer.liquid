<div class="w-full py-4 text-sm text-primary opacity-50">
    <footer class="max-w-5xl mx-auto space-y-4">
        <div class="flex items-center justify-start space-y-1">
            {{ site.settings.footer_menu_html }}
        </div>
        <div class="flex flex-col items-start justify-center md:flex-row md:justify-between">
            <div class="mb-4 md:mb-0">
                <div class="flex flex-col items-center shrink-0 md:flex-row">
                    <!-- Logo -->
                    <a class="inline-flex" href="{{site.index_path}}" aria-label="{{ site.name }}">
                        {% assign logo = 'images/logo.png' | asset_url %}
                        <img src="{{ site.settings.logo_url | default: logo }}" class="h-8" alt="{{ site.name }} LOGO" />
                    </a>
                    <div class="text-sm text-slate-500"> {{ site.name }} <span class="md:hidden lg:inline">. {{ 'generic.copyright' | t }}.</span> {{ site.settings.copyright_info }} </div>
                </div>
            </div>
        </div>
    </footer>
</div>